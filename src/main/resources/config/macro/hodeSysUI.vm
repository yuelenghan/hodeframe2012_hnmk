	function changeURL_${id}(i)
	{
		var showPicContent= document.getElementById("$id");
		var strHTML="";
		if(arr_${id}.length > 0 )
		{
			strHTML = arr_$id[i]+"<BR>";
			for(var j=1;j<arr_${id}.length;j++)
			{
				if(j == i)
					strHTML+="<a style='cursor:hand;' onclick='changeURL_${id}("+j+")'><font color='red'>"+(j)+"</font>&nbsp;&nbsp;&nbsp;</a>";
				else
					strHTML+="<a style='cursor:hand;' onclick='changeURL_${id}("+j+")'>"+(j)+"&nbsp;&nbsp;&nbsp;</a>";
			}
		}
		else
		{
			strHTML ="<img src='$action.getText('config.prjName')/images/xwfgj/nopic.jpg'";
			#if($width > 0)
				strHTML += "width='$width' ";
			#end
			#if($height>0)
				strHTML += "height='$height' ";
			#end
			strHTML += " >";
		}
		showPicContent.innerHTML = strHTML;
		changeImgSize_${id}(i,$width,$height);
	}

	function changeImgSize_${id}(i,thisWidth,thisHeight)
	{

		if(thisWidth > 0 && thisHeight > 0 )
		{
			var showThisImg = document.getElementById("showThisImg_${id}_"+i);
			if((showThisImg.width > 0 ) && (showThisImg.height > 0))
			{
				if(showThisImg.width > showThisImg.height )
				{
					showThisImg.height= thisWidth * showThisImg.height / showThisImg.width;
					showThisImg.width=thisWidth;
				}
				else
				{
					showThisImg.width= thisHeight * showThisImg.width / showThisImg.height;
					showThisImg.height=thisHeight;
				}
			}
		}

	}
	changeURL_${id}(1);
	</SCRIPT>
#end


